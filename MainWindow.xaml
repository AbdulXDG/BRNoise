<Window x:Class="FluentNoise.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FluentNoise" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="FluentNoise Generator"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,10"/>

        <!-- Main Controls -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical" Margin="10">

                <!-- Presets -->
                <GroupBox Header="Presets" Margin="0,10,0,10">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="White" Margin="5"/>
                        <Button Content="Pink" Margin="5"/>
                        <Button Content="Brown" Margin="5"/>
                        <Button Content="Grey" Margin="5"/>
                        <Button Content="Infra" Margin="5"/>
                        <Button Content="Ultra" Margin="5"/>
                    </StackPanel>
                </GroupBox>

                <!-- Frequency Sliders -->
                <GroupBox Header="Frequency Bands" Margin="0,10,0,10">
                    <UniformGrid Columns="4" Rows="2" Margin="10">
                        <StackPanel>
                            <TextBlock Text="60 Hz" HorizontalAlignment="Center"/>
                            <Slider Minimum="-18" Maximum="18" Width="150"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="125 Hz" HorizontalAlignment="Center"/>
                            <Slider Minimum="-18" Maximum="18" Width="150"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="250 Hz" HorizontalAlignment="Center"/>
                            <Slider Minimum="-18" Maximum="18" Width="150"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="500 Hz" HorizontalAlignment="Center"/>
                            <Slider Minimum="-18" Maximum="18" Width="150"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="1 kHz" HorizontalAlignment="Center"/>
                            <Slider Minimum="-18" Maximum="18" Width="150"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="2 kHz" HorizontalAlignment="Center"/>
                            <Slider Minimum="-18" Maximum="18" Width="150"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="4 kHz" HorizontalAlignment="Center"/>
                            <Slider Minimum="-18" Maximum="18" Width="150"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="8 kHz" HorizontalAlignment="Center"/>
                            <Slider Minimum="-18" Maximum="18" Width="150"/>
                        </StackPanel>
                    </UniformGrid>
                </GroupBox>

                <!-- Stereo Width -->
                <GroupBox Header="Stereo Width" Margin="0,10,0,10">
                    <ComboBox SelectedIndex="2" Width="150">
                        <ComboBoxItem>Mono</ComboBoxItem>
                        <ComboBoxItem>Narrow</ComboBoxItem>
                        <ComboBoxItem>Normal</ComboBoxItem>
                        <ComboBoxItem>Wide</ComboBoxItem>
                    </ComboBox>
                </GroupBox>

                <!-- Tape Speed -->
                <GroupBox Header="Tape Speed" Margin="0,10,0,10">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Slower" Margin="5"/>
                        <Button Content="Faster" Margin="5"/>
                        <Button Content="Alternate" Margin="5"/>
                        <Button Content="Reset" Margin="5"/>
                    </StackPanel>
                </GroupBox>

                <!-- Animation -->
                <GroupBox Header="Animation" Margin="0,10,0,10">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="Mode:" Width="100"/>
                            <ComboBox SelectedIndex="0" Width="150">
                                <ComboBoxItem>Soft</ComboBoxItem>
                                <ComboBoxItem>Hard</ComboBoxItem>
                                <ComboBoxItem>Solo</ComboBoxItem>
                                <ComboBoxItem>Duo</ComboBoxItem>
                                <ComboBoxItem>Trio</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="Speed:" Width="100"/>
                            <Slider Minimum="1" Maximum="4" Value="1" Width="150"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="Range:" Width="100"/>
                            <ComboBox SelectedIndex="1" Width="150">
                                <ComboBoxItem>Low</ComboBoxItem>
                                <ComboBoxItem>Normal</ComboBoxItem>
                                <ComboBoxItem>High</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- iEQ -->
                <GroupBox Header="iEQ" Margin="0,10,0,10">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Balanced" Margin="5"/>
                        <Button Content="Full" Margin="5"/>
                        <Button Content="Apply to Sliders" Margin="5"/>
                    </StackPanel>
                </GroupBox>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <Button Content="Play" Margin="5"/>
            <Button Content="Pause" Margin="5"/>
            <Button Content="Reset" Margin="5"/>
            <Button Content="Save" Margin="5"/>
            <Button Content="Load" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
